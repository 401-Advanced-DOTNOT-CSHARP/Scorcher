<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final_Project_Scorcher.MainPage">

    <StackLayout Margin="40">
        <Label Text="Restaraunt information" FontSize="20" FontAttributes="Bold" TextColor="#1690F4" VerticalOptions="Center" HorizontalOptions="Center" Margin="20"/>
        <Label Text="AvgLevel"/>
        <Entry x:Name="AvgLevel"  Keyboard="Numeric" Placeholder="Your name here" />



        <Button Text="Add contact" HorizontalOptions="FillAndExpand" BackgroundColor="#1690F4" TextColor="White" Margin="0,20" Clicked="OnButtonClicked" />
        <ListView x:Name="ContactListView"
                      ItemsSource="{Binding Contacts}"
                      BackgroundColor="#F0ECEC"
                      SelectionMode="None" 
                      Footer="">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Orientation="Horizontal" Margin="0,10">
                            <Label  Text="{Binding AvgLevel}"      FontSize="15" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>