<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Final_Project_Scorcher.Views.Dishes">
    <ContentPage.Content>
        <StackLayout>
            <Label Style="{StaticResource TitleLabel}" Text="Scorcher"/>
            <Label 
                x:Name="RestaurantName" 
                Text="{Binding RestaurantName}"
                FontSize="25"
                HorizontalOptions="Center"
                FontAttributes="Bold"                
            />
            <Grid Padding="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Label 
                Grid.Column="0" 
                Text="Dish Name"
                FontSize="20"
                HorizontalOptions="Start"
                FontAttributes="Bold"
                />
                <Label 
                Grid.Column="1" 
                Text="Level"
                FontSize="20"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                />
                <Label 
                Grid.Column="2" 
                Text="Votes"
                FontSize="20"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                />
                <Label 
                Grid.Column="3" 
                Text="Average"
                FontSize="20"
                HorizontalOptions="Center"
                FontAttributes="Bold"
                />
            </Grid>
            <ListView x:Name="DishesList">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Padding="0" x:Name="{Binding Id}">
                                <Grid.GestureRecognizers>
                                    <TapGestureRecognizer CommandParameter="{Binding Id}" Tapped="NavigateToRatedDish" NumberOfTapsRequired="1" />
                                </Grid.GestureRecognizers>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="15*" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Label 
                                    Text="{Binding Name}" 
                                    Grid.Column="0"
                                    Grid.Row="1"
                                    FontSize="20"
                                    HorizontalOptions="Start"
                                />
                                <Label 
                                    Text="{Binding Level}" 
                                    Grid.Column="1"
                                    Grid.Row="1"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                />
                                <Label 
                                    Text="{Binding TotalVotes}" 
                                    Grid.Column="2"
                                    Grid.Row="1"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                />
                                <Label 
                                    Text="{Binding AvgLevel}" 
                                    Grid.Column="3"
                                    Grid.Row="1"
                                    FontSize="20"
                                    HorizontalOptions="Center"
                                />
                                <!--<Label 
                                    Text="{Binding RestaurantDishOffset}" 
                                    Grid.Column="4"
                                    Grid.Row="1"
                                    FontSize="20"
                                    HorizontalOptions="Start"
                                />-->
                                <Label Text="{Binding Id}" x:Name="Id" IsVisible="false"/>
                            </Grid>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>